@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>IdtUser</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdtUser.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdtUser.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdtUser.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdtUser.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdtUser.Roles)
        </dt>
        <dd class="col-sm-10">
            @{ var role = new List<string>();}

            @for (var i = 0; i < Model.IdtUser.Roles.Count(); i++)
            {
                role.Add(Model.IdtUser.Roles[i]);
            }

            @{ var roleOrdered = string.Join(", ", role.OrderBy(r => r));}
            @Html.DisplayFor(modelItem => roleOrdered)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.IdtUser?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
