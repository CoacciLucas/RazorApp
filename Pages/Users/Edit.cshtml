@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdtUser.Id" />
            <div class="form-group">
                <label asp-for="IdtUser.UserName" class="control-label"></label>
                <input asp-for="IdtUser.UserName" class="form-control" />
                <span asp-validation-for="IdtUser.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdtUser.Email" class="control-label"></label>
                <input asp-for="IdtUser.Email" class="form-control" />
                <span asp-validation-for="IdtUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdtUser.PhoneNumber" class="control-label"></label>
                <input asp-for="IdtUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="IdtUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdtUser.Roles" class="control-label"></label><br />
                @for (var i = 0; i < Model.Roles.Count(); i++)
                {
                    var isChecked = Model.IdtUser.Roles.Any(x => x.Equals(Model.Roles[i].Name)) ? "checked" : "";
                    <input type="checkbox" name="SelectedRoles" value="@Model.Roles[i].Id" @isChecked />
                    <label>@Model.Roles[i].Name</label><br />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

